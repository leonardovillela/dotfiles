#!/usr/bin/env bash
# .tool-versions hash: {{ include "dot_tool-versions" | sha256sum }}

echo "Shell is $SHELL"

echo "Installing ASDF plugins ðŸ¥‹"

# Install ASDF if not already installed
if [ ! -d "$HOME/.asdf" ]; then
  echo "Installing ASDF version manager"
  git clone https://github.com/asdf-vm/asdf.git ~/.asdf --branch v0.14.1
fi

# Source ASDF for this session
. "$HOME/.asdf/asdf.sh"

asdf plugin add nodejs https://github.com/asdf-vm/asdf-nodejs.git
node_status_code=$?
if [ $node_status_code -eq 0 ] || [ $node_status_code -eq 2 ]; then
    echo "NodeJS plugin is installed"
fi

asdf plugin add ruby https://github.com/asdf-vm/asdf-ruby.git
ruby_status_code=$?
if [ $ruby_status_code -eq 0 ] || [ $ruby_status_code -eq 2 ]; then
    echo "Ruby plugin is installed"
fi

asdf plugin-add golang https://github.com/kennyp/asdf-golang.git
golang_status_code=$?
if [ $golang_status_code -eq 0 ] || [ $golang_status_code -eq 2 ]; then
    echo "Go plugin is installed"
fi

echo "Installing ASDF plugins done âœ…"
echo ""

echo "Installing ASDF languages binaries ðŸ› "

asdf install

echo "Installing ASDF languages binaries done âœ…"

{{ end }}